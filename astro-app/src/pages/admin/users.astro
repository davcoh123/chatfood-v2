---
import AdminLayout from '@/layouts/AdminLayout.astro';
import AdminUsersPage from '@/components/react/admin/AdminUsersPage';

// Get user from middleware locals (includes role)
const user = (Astro.locals as any).user;

if (!user) {
  return Astro.redirect('/login?redirect=/admin/users');
}

if (user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}
---

<AdminLayout title="Utilisateurs - Admin">
  <AdminUsersPage client:only="react" />
</AdminLayout>
