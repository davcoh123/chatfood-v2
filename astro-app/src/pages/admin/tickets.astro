---
import AdminLayout from '@/layouts/AdminLayout.astro';
import AdminTicketsPage from '@/components/react/admin/AdminTicketsPage';

// Get user from middleware locals (includes role)
const user = (Astro.locals as any).user;

if (!user) {
  return Astro.redirect('/login?redirect=/admin/tickets');
}

if (user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}
---

<AdminLayout title="Tickets - Admin">
  <AdminTicketsPage client:only="react" />
</AdminLayout>
