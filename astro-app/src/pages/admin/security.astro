---
import AdminLayout from '@/layouts/AdminLayout.astro';
import AdminSecurityPage from '@/components/react/admin/AdminSecurityPage';

// Get user from middleware locals (includes role)
const user = (Astro.locals as any).user;

if (!user) {
  return Astro.redirect('/login?redirect=/admin/security');
}

if (user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}
---

<AdminLayout title="Sécurité - Admin">
  <AdminSecurityPage client:only="react" />
</AdminLayout>
