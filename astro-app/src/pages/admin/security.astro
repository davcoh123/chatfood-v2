---
import AdminLayout from '@/layouts/AdminLayout.astro';
import { createServerClient } from '@/lib/supabase';
import AdminSecurityPage from '@/components/react/admin/AdminSecurityPage';

const supabase = createServerClient(Astro.cookies);
const { data: { user }, error: userError } = await supabase.auth.getUser();

if (!user || userError) {
  return Astro.redirect('/login?redirect=/admin/security');
}

let isAdmin = false;
try {
  const { data: role } = await supabase
  .from('user_roles')
  .select('role')
  .eq('user_id', user.id)
  .single();
  isAdmin = role?.role === 'admin';
} catch (e) {
  isAdmin = false;
}

if (!isAdmin) {
  return Astro.redirect('/dashboard');
}
---

<AdminLayout title="Sécurité - Admin">
  <AdminSecurityPage client:only="react" />
</AdminLayout>
