---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import { OrdersPageWrapper } from '@/components/react/OrdersPageWrapper';

// Get user from middleware locals
const user = (Astro.locals as any).user;

if (!user) {
  return Astro.redirect('/login?redirect=/dashboard/orders');
}
---

<DashboardLayout title="Commandes">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl md:text-3xl font-bold">Commandes</h1>
      <p class="text-gray-500 mt-2">
        Gérez vos commandes et suivez leur statut en temps réel
      </p>
    </div>
    
    <OrdersPageWrapper client:only="react" userId={user.id} userPlan={user.plan} />
  </div>
</DashboardLayout>
