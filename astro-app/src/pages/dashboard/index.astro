---
import DashboardLayout from '@/layouts/DashboardLayout.astro';

// Get user from middleware locals
const user = (Astro.locals as any).user;
const supabase = (Astro.locals as any).supabase;

if (!user) {
  return Astro.redirect('/login');
}

// Fetch restaurant settings
const { data: settings } = await supabase
  .from('restaurant_settings')
  .select('*')
  .eq('user_id', user.id)
  .single();

// Fetch recent orders count (last 30 days)
const thirtyDaysAgo = new Date();
thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);

const { count: ordersCount } = await supabase
  .from('orders')
  .select('*', { count: 'exact', head: true })
  .eq('user_id', user.id)
  .gte('created_at', thirtyDaysAgo.toISOString());

// Fetch catalogue items count
const { count: productsCount } = await supabase
  .from('menus')
  .select('*', { count: 'exact', head: true })
  .eq('user_id', user.id);

// Fetch reservations count (upcoming)
const { count: reservationsCount } = await supabase
  .from('reservations')
  .select('*', { count: 'exact', head: true })
  .eq('user_id', user.id)
  .gte('date', new Date().toISOString().split('T')[0]);

// Calculate onboarding progress
const onboardingSteps = [
  { name: 'Nom du restaurant', completed: !!settings?.restaurant_name },
  { name: 'Adresse', completed: !!settings?.address },
  { name: 'T√©l√©phone', completed: !!settings?.phone },
  { name: 'Horaires', completed: !!settings?.opening_hours },
  { name: 'Catalogue', completed: (productsCount || 0) > 0 },
];
const completedSteps = onboardingSteps.filter(s => s.completed).length;
const onboardingProgress = Math.round((completedSteps / onboardingSteps.length) * 100);
---

<DashboardLayout title="Tableau de bord">
  <div class="space-y-6">
    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-green-600 to-green-700 rounded-xl p-6 text-white">
      <h2 class="text-2xl font-bold mb-2">
        Bienvenue, {user.first_name || 'Restaurateur'} ! üëã
      </h2>
      <p class="text-green-100">
        {settings?.restaurant_name 
          ? `G√©rez votre restaurant "${settings.restaurant_name}" depuis votre tableau de bord.`
          : 'Commencez par configurer votre restaurant pour profiter de toutes les fonctionnalit√©s.'
        }
      </p>
    </div>

    <!-- Onboarding Progress -->
    {onboardingProgress < 100 && (
      <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-gray-900">Configuration de votre restaurant</h3>
          <span class="text-sm text-gray-500">{onboardingProgress}% compl√©t√©</span>
        </div>
        
        <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
          <div 
            class="bg-green-600 h-2 rounded-full transition-all duration-500"
            style={`width: ${onboardingProgress}%`}
          ></div>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-5 gap-2">
          {onboardingSteps.map(step => (
            <div class={`flex items-center gap-2 text-sm ${step.completed ? 'text-green-600' : 'text-gray-400'}`}>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                {step.completed 
                  ? <><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></>
                  : <><circle cx="12" cy="12" r="10"/></>
                }
              </svg>
              <span>{step.name}</span>
            </div>
          ))}
        </div>
        
        <a 
          href="/dashboard/settings" 
          class="inline-flex items-center gap-2 mt-4 text-green-600 hover:text-green-700 text-sm font-medium"
        >
          Compl√©ter la configuration
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
    )}

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white rounded-xl p-5 border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Commandes (30j)</p>
            <p class="text-2xl font-bold text-gray-900">{ordersCount || 0}</p>
          </div>
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-blue-600"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl p-5 border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Produits</p>
            <p class="text-2xl font-bold text-gray-900">{productsCount || 0}</p>
          </div>
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600"><path d="M12 2H2v10l9.29 9.29c.94.94 2.48.94 3.42 0l6.58-6.58c.94-.94.94-2.48 0-3.42L12 2Z"/><path d="M7 7h.01"/></svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl p-5 border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">R√©servations</p>
            <p class="text-2xl font-bold text-gray-900">{reservationsCount || 0}</p>
          </div>
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-600"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl p-5 border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-500 mb-1">Plan actuel</p>
            <p class="text-2xl font-bold text-gray-900 capitalize">{user.plan || 'Starter'}</p>
          </div>
          <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-600"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-xl p-6 border border-gray-200 shadow-sm">
      <h3 class="font-semibold text-gray-900 mb-4">Actions rapides</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <a href="/dashboard/catalogue" class="flex flex-col items-center gap-2 p-4 rounded-lg border border-gray-200 hover:border-green-500 hover:bg-green-50 transition-colors group">
          <div class="w-12 h-12 bg-gray-100 group-hover:bg-green-100 rounded-lg flex items-center justify-center transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600 group-hover:text-green-600"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-green-700">Ajouter un produit</span>
        </a>
        
        <a href="/dashboard/orders" class="flex flex-col items-center gap-2 p-4 rounded-lg border border-gray-200 hover:border-green-500 hover:bg-green-50 transition-colors group">
          <div class="w-12 h-12 bg-gray-100 group-hover:bg-green-100 rounded-lg flex items-center justify-center transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600 group-hover:text-green-600"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-green-700">Voir commandes</span>
        </a>
        
        <a href="/dashboard/analytics" class="flex flex-col items-center gap-2 p-4 rounded-lg border border-gray-200 hover:border-green-500 hover:bg-green-50 transition-colors group">
          <div class="w-12 h-12 bg-gray-100 group-hover:bg-green-100 rounded-lg flex items-center justify-center transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600 group-hover:text-green-600"><line x1="12" x2="12" y1="20" y2="10"/><line x1="18" x2="18" y1="20" y2="4"/><line x1="6" x2="6" y1="20" y2="16"/></svg>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-green-700">Statistiques</span>
        </a>
        
        <a href="/dashboard/settings" class="flex flex-col items-center gap-2 p-4 rounded-lg border border-gray-200 hover:border-green-500 hover:bg-green-50 transition-colors group">
          <div class="w-12 h-12 bg-gray-100 group-hover:bg-green-100 rounded-lg flex items-center justify-center transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-600 group-hover:text-green-600"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
          </div>
          <span class="text-sm font-medium text-gray-700 group-hover:text-green-700">Param√®tres</span>
        </a>
      </div>
    </div>

    <!-- Restaurant Link -->
    {settings?.slug && (
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl p-6 border border-gray-200">
        <h3 class="font-semibold text-gray-900 mb-2">Page publique de votre restaurant</h3>
        <p class="text-gray-500 text-sm mb-4">Partagez ce lien avec vos clients pour qu'ils puissent voir votre menu et passer commande.</p>
        <div class="flex items-center gap-3">
          <input 
            type="text" 
            readonly 
            value={`${Astro.url.origin}/r/${settings.slug}`}
            class="flex-1 bg-white border border-gray-300 rounded-lg px-4 py-2 text-sm text-gray-700"
          />
          <button 
            onclick={`navigator.clipboard.writeText('${Astro.url.origin}/r/${settings.slug}'); this.textContent = 'Copi√© !'; setTimeout(() => this.textContent = 'Copier', 2000);`}
            class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm font-medium transition-colors"
          >
            Copier
          </button>
          <a 
            href={`/r/${settings.slug}`}
            target="_blank"
            class="px-4 py-2 border border-gray-300 hover:border-gray-400 rounded-lg text-sm font-medium transition-colors"
          >
            Ouvrir
          </a>
        </div>
      </div>
    )}
  </div>
</DashboardLayout>
