---
/**
 * Base Layout - Foundation for all pages
 * 
 * Includes:
 * - Global CSS
 * - SEO meta tags
 * - Font preloading
 * - View Transitions
 */

import '@/styles/global.css';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  noindex?: boolean;
  jsonLd?: object;
}

const {
  title,
  description = "ChatFood - L'assistant IA WhatsApp pour restaurants. Automatisez vos commandes et r√©servations 24/7.",
  image = '/og-image.png',
  canonicalUrl,
  noindex = false,
  jsonLd,
} = Astro.props;

const siteUrl = Astro.site || new URL(Astro.url.origin);
const canonical = canonicalUrl || Astro.url.href;
const ogImage = new URL(image, siteUrl).toString();
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="ChatFood" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://dcwfgxbwpecnjbhrhrib.supabase.co" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- JSON-LD Structured Data -->
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}
    
    <!-- Default Organization Schema -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "ChatFood",
        "url": "https://chatfood.fr",
        "logo": "https://chatfood.fr/logo.png",
        "description": "Assistant IA WhatsApp pour restaurants",
        "sameAs": [
          "https://twitter.com/chatfood_fr",
          "https://linkedin.com/company/chatfood"
        ]
      })}
    </script>
    
    <!-- View Transitions - Disabled temporarily to fix text disappearing issue -->
    <!-- <ViewTransitions /> -->
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <slot />
  </body>
</html>
